<div class="container w-100">
  <div class="row my-4">
    <%= render 'public/shared/genre_sidebar' %>

    <div class="col-9">
      <div class="row my-2 justify-content-between align-items-baseline">
        <div class="col-auto thead-color">
          <h2 class="pl-3 d-inline-block">商品一覧</h2>
          <h4 class="pt-2 pr-1 d-inline-block">（全<%= Item.count %>件）</h4>
        </div>
      </div>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-6 col-md-4 col-lg-3 mb-3 text-start d-flex flex-column card border-0">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image, class:"card-img-top" %>
            <% end %>
            <div class="card-title text-center">
              <%= item.name %>
            </div>
            <div class="card-text text-center">
              <%= number_to_currency(item.price_in_tax, unit: "￥", format: "%u%n", precision: 0) %>
            </div>
          </div>
        <% end %>

        <div class="col-12 d-flex justify-content-center my-2">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row my-4 justify-content-between align-items-baseline">
    <div class="col-auto">
      <h2 class="bg-light px-3 py-1 d-inline-block"><%= @genre.name %> のラインナップ</h2>
      <h4 class="bg-light px-2 py-1 d-inline-block">（全<%= @items.count %>件）</h4>
    </div>
  </div>


  <div class="row">
    <% @items.each do |item| %>
      <div class="col-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 border-0">
          <%= link_to public_item_path(item.id), class: "text-decoration-none text-dark" do %>
            <%= image_tag item.get_image, class: "card-img-top" %>
            <div class="card-body p-2">
              <h5 class="card-title mb-1"><%= item.name %></h5>
              <p class="card-text mb-0">
                <%= number_to_currency(item.price_in_tax, unit: "￥", format: "%u%n", precision: 0) %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="col-12 d-flex justify-content-center my-3">
      <%= paginate @items %>
    </div>
  </div>
</div>

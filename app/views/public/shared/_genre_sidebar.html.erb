<div class="col-3">
    <table class="table table-bordered">
      <thead class="table-light thead-color">
        <tr><th class="px-4">ジャンル検索</th></tr>
      </thead>
      <tbody class="tbody-color">
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, public_genre_path(genre),
                class: "text-decoration-none #{'fw-bold text-primary' if params[:id].to_i == genre.id}" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<div class="container my-5">
  <h2 class="mb-5 ml-5">マイページ</h2>

  <div class="row mb-4">   
    <h4 class="col-label col-mb-4">
      登録情報
    </h4>
    <div class="col-md-5 ml-3">
      <%= link_to "編集する", edit_public_customer_path(@customer), class: " btn btn-success" %>
    </div>
  </div>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </th>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-row mt-4 mb-4">
    <h4 class="col-label col-mb-4">
      注文履歴
    </h4>
    <div class="col-md-5 ml-3">
      <%= link_to "一覧を見る", public_orders_path(@orders), class: "btn btn-primary" %>
    </div>
  </div>
</div>
  


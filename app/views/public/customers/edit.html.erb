<h2>会員情報編集</h2>

<%= form_with model:@customer, url: public_customer_path(@customer), local: true do |f| %>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      氏名
    </div>
    <div class="col-md-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      フリガナ
    </div>
    <div class="col-md-5">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      郵便番号
    </div>
    <div class="col-md-5">
      <%= f.number_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      住所
    </div>
    <div class="col-md-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      電話番号
    </div>
    <div class="col-md-5">
      <%= f.number_field :telephone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      メールアドレス
    </div>
    <div class="col-md-5">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>


  <div class="form-row mb-3">
    <div class="col-md-5">
      <%= f.submit "編集内容を保存", class: "btn-success" %>
    </div>
    <div class="col-md-5">
      <%= link_to "退会する", unsubscribe_public_customer_path(@customer), class: "btn btn-danger" %>
    </div>
  </div>

<% end %>

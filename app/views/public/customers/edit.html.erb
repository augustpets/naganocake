<h2>会員情報編集</h2>

<%= form_with model: Customer do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :last_name, :first_name, '氏名' %>
      <%= f.text_field :last_name, class: "form-control" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :last_name_kana, :first_name_kana, 'フリガナ' %>
      <%= f.text_field :last_name_kana, class: "form-control" %>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.number_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :telephone_number, '電話番号' %>
      <%= f.number_field :telephone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.submit "編集内容を保存" %>
    </div>
  </div>

<% end %>

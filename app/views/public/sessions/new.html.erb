<h2>ログイン</h2>

<%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      メールアドレス
    </div>
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-row mb-3">
    <div class="col-form-label col-md-2">
      パスワード
    </div>
    <div class="col-md-5">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="col-md-8">
    <%= f.submit "ログイン", class: "btn-primary" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<div class = "container w-100  my-4 d-flex flex-row justify-content-center">
  <div class = "row align-item-baseline  d-flex justify-content-between w-75 my-3">
    <h2 class = "bg-light px-3">注文履歴一覧</h2>
  </div>
</div>

<div class="d-flex justify-content-center">
  <table class = "table table-hover w-75" >    
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(order) %>
          </td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td><%= order.order_details.sum(:amount) %>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
    <div class='d-flex justify-content-around'>
      <%= paginate @orders %>
    </div>
  </table>

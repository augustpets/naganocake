<div class='container W-100 my-3'>
  <div class='row my-4 w-75'>
    <div class="col-12">
      <h2 class="table-light thead-color px-3 text-start d-inline-block">会員一覧</h2>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <table class='table table-hover table-inverse my-2 w-75'>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-secondary">無効</div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


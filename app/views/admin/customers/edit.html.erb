<div class='container W-100 my-3'>
  <div class='row my-4 w-75'>
    <div class="col-12">
      <h2 class="bg-light px-3 text-start d-inline-block">
        <%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員情報編
      </h2>

        <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>

          <div class="form-row my-3">
            <label class="col-md-2 col-form-label">
              会員ID
            </label>
            <div class="col-md-5">
              <p class="form-control-plaintext">
                <%= @customer.id %>
              </p>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              氏名
            </div>
            <div class="col-md-3">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
            <div class="col-md-3">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              フリガナ
            </div>
            <div class="col-md-3">
              <%= f.text_field :last_name_kana, class: "form-control" %>
            </div>
            <div class="col-md-3">
              <%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              郵便番号
            </div>
            <div class="col-md-3">
              <%= f.number_field :postal_code, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              住所
            </div>
            <div class="col-md-10">
              <%= f.text_field :address, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              電話番号
            </div>
            <div class="col-md-3">
              <%= f.number_field :telephone_number, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-form-label col-md-2">
              メールアドレス
            </div>
            <div class="col-md-3">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="form-row mb-3">
            <label class="col-md-2 col-form-label">
              会員ステータス
            </label>
            <div class="col-md-1">
              <p class="form-control-plaintext">
                <%= f.radio_button :is_active, true, class: 'ml-1' %>
                <%= f.label :is_active_true, '有効' %>
              </p>
            </div>
            <div class="col-md-1">
              <p class="form-control-plaintext">
                <%= f.radio_button :is_active, false, class: 'ml-1' %>
                <%= f.label :is_active_false, '無効' %>
              </p>
            </div>
          </div>

          <div class="form-row mb-3">
            <div class="col-md-5">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>
      



<div class='container W-100 my-3'>
  <div class='row my-4 w-75'>
    <div class="col-12">
      <h2 class="bg-light px-3 text-start d-inline-block">
        <%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細
      </h2>
      <div class="form-row mb-3 my-3">
        <div class="col-form-label col-md-2">
          会員ID
        </div>
        <div class="col-md-5">
          <%= @customer.id %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          氏名
        </div>
        <div class="col-md-5">
          <%= "#{@customer.last_name}#{@customer.first_name}" %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          フリガナ
        </div>
        <div class="col-md-5">
          <%= "#{@customer.last_name_kana}#{@customer.first_name_kana}" %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          郵便番号
        </div>
        <div class="col-md-5">
          <%= @customer.postal_code %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          住所
        </div>
        <div class="col-md-5">
          <%= @customer.address %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          電話番号
        </div>
        <div class="col-md-5">
          <%= @customer.telephone_number %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          メールアドレス
        </div>
        <div class="col-md-5">
          <%= @customer.email %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-form-label col-md-2">
          会員ステータス
        </div>
        <div class="col-md-5">
          <% if @customer.is_active %>
            <div>有効</div>
          <% else %>
            <div>無効</div>
          <% end %>
        </div>
      </div>

      <div class="form-row mb-3">
        <div class="col-md-5">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>




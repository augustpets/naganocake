<div class="container py-5 px-0">
  <div class="row d-flex">
    <div class="col-6 mx-2">
      <h3><span class="gb-light">注文履歴詳細</span></h3>
      <table class="table">
        <tr>
          <td class="font-weight-bold">購入者</td>
          <td><%= @order.name %>
        </tr>
        <tr>
          <td class="font-weight-bold">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="font-weight-bold">配送先</td>
          <td><%= @order.address %><br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="font-weight-bold">支払方法</td>
          <td>
            <% if @order_payment_method == "credit_card" %>
              クレジットカード
            <% else %>
              銀行振込
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="font-weight-bold">注文ステータス</td>
          <td>
            <%= form_with(model: @order, url: admin_order_path(@order), local: true, class: "form-row") do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert, { prompt: false }, class:"form-control form-control-sm", style: "width: 150px;" %>
              <%= f.submit "更新", class: "btn btn-sm btn-primary ml-2" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container py-5 px-0">
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |detail| %>
            <tr>
              <td><%= detail.item.name %></td>
              <td><%= detail.item.price_in_tax %></td>
              <td><%= detail.amount %></td>
              <td><%= detail.subtotal %></td>
              <td>
                <%= form_with(model: detail, url: admin_order_order_detail_path(@order, detail), method: :patch, local: true) do |form| %>
                  <%= form.select :making_status, OrderDetail.making_statuses_i18n.invert, { prompt: false }, class: "form-select-sm" %>
                  <%= form.submit "更新", class: "btn btn-sm btn-secondary ml-2" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light font-weight-bold">商品合計</td>
            <td><%= @order.order_details.sum { |d| d.subtotal } %>円</td>
          </tr>
          <tr>
            <td class="bg-light font-weight-bold">送料</td>
            <td><%= @order.shipping_cost %>円</td>
          </tr>
          <tr>
            <td class="bg-light font-weight-bold">請求金額合計</td>
            <td class="font-weight-bold"><%= @order.total_payment %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
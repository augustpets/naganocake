<div class="container p-5">
  <div class="row d-flex">
    <div class="col-6 mx-2">
      <h3><span class="gb-light">注文履歴詳細</span></h3>
      <table class="table">
        <% @orders.each do |order| %>
          <tr>
            <td>購入者</td>
            <td><%= order.customer_name %>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= order.address %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td>
              <% if @selected_payment_method == "credit_card" %>
                クレジットカード
              <% else %>
                銀行振込
              <% end %>
            </td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
              <%= form_with(model: @order, url: admins_order_path, local: true, class: "form-row") do |f| %>
                <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt:false}, class:"form-control form-control-sm clo-6" %>
                <%= f.submit "更新" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

      <br>
    <dic class="col mt-3">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.price_in_tax %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
              <td> 
                <%= form_with(model: cart_item, url: cart_item_path(cart_item), method: :patch, local: false, class: "d-inline-block") do |form| %>
                  <%= form.hidden_field :customer_id, value: current_customer.id %>
                  <%= form.hidden_field :item_id, value: cart_item.item.id %>
                  <%= form.select :making_status, OrderDetail.making_statuses.keys.map { |k| [I18n.t("enums.order_detail.making_status.#{k}", default: k.humanize), k] }, {}, class: "form-select-sm" %>
                  <%= form.submit "更新", class: "btn change_button", style: "background-color: #D5CEA3;" %>
                <% end %>
              </td>
            </tr>
          </tbody>
         <% end %>
      </table>
    </div>
  </div>
</div>




  <div class = "row align-item-baseline  d-flex d-row justify-content-between my-3 ml-5">
    <div class = "thead-color ml-5">
      <h2 class = "px-3">商品一覧</h2>
    </div>
    <div class = "col-2">
      <%= link_to "新規登録", new_admin_item_path, class: "btn btn-primary btn-lg rounded-circle " %>
    </div>
  </div>

<div class="d-flex justify-content-center">
  <table class = "table table-hover w-75" >
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th></th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td></td>
        <td>
          <div class ="<%= item.is_active ? 'text-success' : 'text-secondary' %>">
            <%= item.is_active ? "販売中" : "販売停止中" %>
          </div>
        </td>
      </tr>
      <% end %>
      </tbody>
  </table>
</div>

<div class = "d-flex justify-content-around">
  <%= paginate @items %>
</div>

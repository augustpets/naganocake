<div class="mb-3 row ">
  <%= f.label :image, "商品画像", class: "col-5 col-form-label" %>
  <div class="col-6">
    <%= f.file_field :image, accept: "image/*" %>
  </div>
</div>

<div class="mb-3 row">
  <%= f.label :name, "商品名", class: "col-5 col-form-label" %>
  <div class="col-6">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="mb-3 row">
  <%= f.label :introduction, "商品説明", class: "col-5 col-form-label" %>
  <div class="col-6">
    <%= f.text_area :introduction,  rows: 5, class: "form-control" %>
  </div>
</div>

<div class="mb-3 row">
  <%= f.label :genre_id, "ジャンル", class: "col-5 col-form-label" %>
  <div class="col-6">
    <%= f.collection_select :genre_id, Genre.all, :id, :name,{ prompt: '--選択してください--' }, { class: "form-control" } %>
  </div>
</div>

<div class="mb-3 row">
  <%= f.label :price, "税抜価格", class: "col-5 col-form-label" %>
    <div class= "col-6 d-flex align-items-center">
    <%= f.text_field :price, class: "form-control" %>
    <span class="ms-5">円</span>
    </div>
</div>


<div class="mb-3 row d-flex align-items-baseline">
  <%= f.label :is_active, "販売ステータス", class: "col-5 col-form-label" %>
  <div class="col-6">
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中", value:true %>

    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "販売停止中", value:false %>
  </div>
</div>


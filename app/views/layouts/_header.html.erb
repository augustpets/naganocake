<header class="custom-color d-flex justify-content-between align-items-center border-bottom px-4 py-2" style="border-color:black !important;">
  <div>
    <%= link_to root_path do %>
      <%= image_tag "Logo_iOS.jpg", style: "width: 10%;" %>
    <% end %>
    <% unless controller_path.start_with?('admin/') %>
      <span class="ml-2">
        ようこそ、<%= customer_signed_in? ? current_customer.last_name : "ゲスト" %>さん!
      </span>
    <% end %>
  </div>

  <nav class="d-flex">
    <% if admin_signed_in? %>
      <%= link_to "商品一覧", admin_items_path, class: "btn btn-white mx-1" %>
      <%= link_to "会員一覧", admin_customers_path, class: "btn btn-white mx-1" %>
      <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-white mx-1" %>
      <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-white mx-1" %>

    <% elsif customer_signed_in? %>
      <%= link_to "マイページ", customers_mypage_path(current_customer), class: "btn btn-white mx-1" %>
      <%= link_to "商品一覧", items_path, class: "btn btn-white mx-1" %>
      <%= link_to "カート", cart_items_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-white mx-1" %>

    <% else %>
      <%= link_to "About", about_path, class: "btn btn-white mx-1" %>
      <%= link_to "商品一覧", items_path, class: "btn btn-white mx-1" %>
      <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログイン", new_customer_session_path, class: "btn btn-white mx-1" %>
    <% end %>
  </nav>
</header>

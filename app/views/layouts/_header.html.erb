<header class="d-flex justify-content-between align-items-center border-bottom px-4 py-2" style="border-color:black !important;">
  <h2 class="border px-5 py-2 m-0" style="border-color:black !important;">LOGO</h2>
  <div class="d-flex flex-column align-items-end">
    <nav class="d-flex mb-4">
      <% if admin_signed_in? %>
        <%= link_to "商品一覧", admin_items_path, class: "btn btn-white border mx-1" %>
        <%= link_to "会員一覧", admin_customers_path, class: "btn btn-white border mx-1" %>
        <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-white border mx-1" %>
        <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-white border mx-1" %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-white border mx-1" %>

      <% elsif customer_signed_in? %>
        <%= link_to "マイページ", public_customer_path(current_customer), class: "btn btn-white border mx-1" %>
        <%= link_to "商品一覧", public_items_path, class: "btn btn-white border mx-1" %>
        <%= link_to "カート", cart_items_path, class: "btn btn-white border mx-1" %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-white border mx-1" %>

      <% else %>
        <%= link_to "About", about_path, class: "btn btn-white border mx-1" %>
        <%= link_to "商品一覧", public_items_path, class: "btn btn-white border mx-1" %>
        <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-white border mx-1" %>
        <%= link_to "ログイン", new_customer_session_path, class: "btn btn-white border mx-1" %>
      <% end %>
    </nav>    
</header>